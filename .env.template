# ============================================================
# Multi-Modal Stock Intelligence Platform
# Environment Configuration Template
# ============================================================
# SECURITY WARNING: Never commit the actual .env file to version control!
# Copy this template to .env and fill in your actual values.

# ============================================================
# Application Settings
# ============================================================
APP_NAME=Multi-Modal Stock Intelligence Platform
APP_ENV=development  # development/staging/production
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
API_VERSION=v1

# ============================================================
# Backend Configuration
# ============================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://frontend:3000"]

# ============================================================
# Database - PostgreSQL
# ============================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=stock_intelligence
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password-here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================================
# Database - MongoDB
# ============================================================
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your-mongodb-password-here
MONGO_DB=stock_intelligence
MONGODB_URL=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}

# ============================================================
# Cache - Redis
# ============================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
REDIS_CACHE_TTL=300  # 5 minutes in seconds

# ============================================================
# API Keys - Data Sources
# ============================================================
# Get your NewsAPI key from: https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key-here

# Get your Alpha Vantage key from: https://www.alphavantage.co/
ALPHA_VANTAGE_KEY=your-alpha-vantage-key-here

# World Bank API is public (optional key)
WORLD_BANK_API_KEY=

# ============================================================
# API Keys - Social Sentiment
# ============================================================
# Get your StockTwits token from: https://stocktwits.com/developers
STOCKTWITS_ACCESS_TOKEN=your-stocktwits-token-here

# Twitter API v2 Bearer Token (optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here

# ============================================================
# API Keys - Live Market Data
# ============================================================
# Get your Upstox API credentials from: https://upstox.com/developer/
UPSTOX_API_KEY=your-upstox-api-key-here
UPSTOX_API_SECRET=your-upstox-api-secret-here
UPSTOX_REDIRECT_URI=http://localhost:8000/auth/upstox/callback

# These will be generated via OAuth flow
UPSTOX_ACCESS_TOKEN=
UPSTOX_REFRESH_TOKEN=

# ============================================================
# MLflow Configuration
# ============================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=stock-forecasting

# ============================================================
# Model Configuration
# ============================================================
MODEL_CHECKPOINT_DIR=./models/checkpoints
LSTM_MODEL_PATH=./models/checkpoints/lstm_forecaster.pth
GRU_MODEL_PATH=./models/checkpoints/gru_forecaster.pth
TRANSFORMER_MODEL_PATH=./models/checkpoints/transformer_forecaster.pth
FINBERT_MODEL_PATH=./models/checkpoints/finbert_sentiment
GROWTH_SCORER_PATH=./models/checkpoints/growth_scorer.pkl

# ============================================================
# Feature Engineering
# ============================================================
LOOKBACK_WINDOW=60  # days for time-series sequences
FORECAST_HORIZON=7  # days ahead to predict
TECHNICAL_INDICATORS=RSI,MACD,EMA,BB,ATR  # comma-separated list for easier parsing
SCALER_TYPE=minmax  # minmax or standard; aligns with docs/metrics_and_evaluation.md Section 4.4
TRAIN_SPLIT_RATIO=0.6  # temporal splits per docs Section 4.4
VAL_SPLIT_RATIO=0.2
TEST_SPLIT_RATIO=0.2  # should equal 1 - TRAIN - VAL
FINBERT_MODEL_NAME=ProsusAI/finbert  # default transformers checkpoint
FINBERT_BATCH_SIZE=16  # adjust based on GPU/CPU memory
FINBERT_MAX_LENGTH=512  # maximum tokens processed (per Section 4.3 leakage guidance)

# ============================================================
# Logging
# ============================================================
LOG_LEVEL=INFO  # DEBUG/INFO/WARNING/ERROR
LOG_FILE=./logs/app.log

# ============================================================
# Frontend Configuration
# ============================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

